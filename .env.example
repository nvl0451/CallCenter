ADMIN_TOKEN=dev-admin

# Ключ OpenAI
OPENAI_API_KEY=sk-proj-...
# Модель по умолчанию
OPENAI_MODEL=gpt-5-nano
OPENAI_USE_RESPONSES=1

TELEGRAM_BOT_TOKEN=123456:ABCDEFG

# Параметры БД
SQLITE_PATH=./callcenter.sqlite3

# ChromaDB
CHROMA_DIR=./chroma_db

DOCS_DIR=./data/kb

# Тюнинги LLM
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.2
REPLY_MAX_TOKENS=512

# Фичи
ENABLE_RAG=1
RAG_USE_OPENAI_EMBEDDINGS=1

ENABLE_VISION=1
VISION_BACKEND=clip
VISION_ALLOW_INSECURE_DOWNLOAD=1

DEBUG_VERBOSE=1

CLASSIFIER_BACKEND=sbert
SBERT_MODEL=paraphrase-multilingual-MiniLM-L12-v2
SBERT_DEVICE=cpu

